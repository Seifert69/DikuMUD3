complicated */

isthere:= self.outside.exit_info[dir];
here:= self.outside;
dest:= self.outside.exit_to[dir];

if ((isset (isthere, EX_CLOSED)) or (isset (isthere, EX_LOCKED))) goto
rnd_dir;

