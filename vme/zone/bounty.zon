			act ("$2n quietly slips $1n something.", A_SOMEONE, pc, self, null, TO_REST);
		}
		else
		{
			act ("$2n quietly slips you your contracts.", A_SOMEONE, pc, self, null, TO_CHAR);
			act ("$2n quietly slips $1n something.", A_SOMEONE, pc, self, null, TO_REST);
		}
	}

:donezo:
	unsecure(pc);
	goto start;
}
