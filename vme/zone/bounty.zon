		}
		i := i + 1;
	}
	i := 0;
	while(i < length(roomlist))
	{
		log("Cleaning up rooms! - "+roomlist.[i]);
		u := findsymbolic(roomlist.[i]+"@bounty");
		item := u.inside;
		while((item) and (item.type == UNIT_ST_OBJ) and (item.symname != "tome2@bounty") and (item.symname != "shop_sign@bounty"))
		{
