		if (arg == "daily")		
			subextra(pc.extra, "$daily_target");
		else if (arg == "monthly")
			subextra(pc.extra, "$monthly_target");
		
		destroy(self.inside);
		exec("say Consider the contract forgotten "+pc.name+".",self);
