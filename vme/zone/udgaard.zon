 u : unitptr;
 pc : unitptr;
 txt : string;
code
{
        :start:
wait(SFB_CMD,(command("aid")or command("quaff"))and
(self.equip==WEAR_HOLD)
and(activator==self.outside)and(activator.position>POSITION_SLEEPING));
block;
