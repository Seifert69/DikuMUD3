/* This dil is used to fix equipment on players that were impacted by the
DIKU3 transition to HTML/CSS coloring. Items can be given to mob (fixer) with this
dil loaded, and he will return a new version of the item. Understood that
this will potentially fix broken items, lets call it a reward for bearing
with the DIKU3 transition. -Sender 2020 */

dilbegin fix();
var
olditem	:	unitptr;
item	:	unitptr;
pc		:	unitptr;
namex	: 	string;
zonex	: 	string;
titlex	: 	string;
exdp	: 	extraptr;


code
{
	heartbeat:= PULSE_SEC*3;
	
:start:

	wait(SFB_DONE, (command("give")) and (target == self) and (activator.type == UNIT_ST_PC));

	pc := activator;
	secure(pc, lostpc);
	olditem := medium;
	secure(olditem, lostpc);
	namex := olditem.nameidx;
	zonex := olditem.zoneidx;
	titlex := olditem.title;
	exdp := "$ply_restrict" in olditem.extra;

	if (olditem.zoneidx == "treasure")
	{
		// do not fix PI. See admin individually.
		log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - is a PI. Do not fix.");
		exec("say I'm afraid I cant fix an item with this kind of power, "+pc.name+"!", self);
		goto no_load;
	}
	if (olditem.zoneidx == "holidays")
	{
		// do not fix holiday gifts. See admin individually.
		log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - is a holiday gift. Do not fix.");
		exec("say I'm afraid this item is created with a magic I dont understand, "+pc.name+"!", self);
		goto no_load;
	}
	if (olditem.objecttype == ITEM_CONTAINER)
	{
		// do not destroy containers.
		log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - is a container. Do not fix.");
		exec("say I'm afraid I cant fix any containers, "+pc.name+"!", self);
		goto no_load;
	}
	if (olditem.symname == "rig_fury@seren1")
	{
		// do not fix Fury. It's personalization is a problem.
		log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - is a righteous fury. Do not fix.");
		exec("say I'm afraid I cant fix this, "+pc.name+"!", self);
		goto no_load;
	}			
	if (FIXED_ITEM in olditem.extra)
	{
		// item has already been fixed
		log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - was previously fixed.");
		exec("say This has already been fixed, "+pc.name+"!", self);
		goto return_old;
	}	
	
	item := load(namex + "@" + zonex);

	if (item.title == titlex)
	{
		// item doesnt need to be fixed
		log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - does not need to be fixed.");
		exec("say This doesnt need to be fixed, "+pc.name+"!", self);
		goto return_old;
	}
	if (exdp)
	{
		// item is  personalized
		if(pc.name == exdp.descr)
		{
			dilcopy ("ply_restrict@function("+pc.name+",0,25,burn_ply@function)",item);
			log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - personalized for "+pc.name+".");
		}
		else
		{
			// item personalized to another player
			log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - personalized for someone other than PC "+pc.name+".");
			exec("say This doesnt belong to you, "+pc.name+"!", self);
			goto return_old;
		}
	}
	addextra(item.extra, {FIXED_ITEM}, "");
	item.height := pc.height;
	unsecure(olditem);
	link(item, pc);
	destroy(olditem);
	exec("say All fixed up, "+pc.name+"!", self);
	act("The fixer hands you "+item.title+".",A_SOMEONE, pc, null, null, TO_CHAR); 
	act("The fixer hands "+pc.name +" "+ item.title+".",A_SOMEONE, pc, null, null, TO_REST); 
	log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - has been fixed.");
	unsecure(pc);
	goto start;
	
:return_old:
	
	destroy(item);

:no_load:

	act("The fixer returns "+titlex+".",A_SOMEONE, pc, null, null, TO_CHAR); 
	act("The fixer returns "+pc.name+"'s "+titlex+".",A_SOMEONE, pc, null, null, TO_REST); 
	log("FIX: item - "+namex+"@"+zonex+" - with title - "+titlex+" - has been returned to player.");
	unsecure(olditem);
	unsecure(pc);
	link(olditem, pc);
	goto start;
	
:lostpc:
	
	destroy(item);
	exec("sigh", self);
	goto start;

	
}
dilend // END DIL FIX

