title "a fine shrubbery"
names {"shrubbery", "fine shrubbery", "small shrubbery"}
descr "A fine small shrubbery has been put here."
extra {}
"What an extraordinarily fine little shrubbery. The leaves are nearly pure white
and look frail and beautiful. It would most definitely look lovely in someone's garden."
manipulate {MANIPULATE_TAKE, MANIPULATE_WEAR_HEAD}
type ITEM_OTHER
weight 5
cost 42 COPPER_PIECE

dilbegin frail();
var
   sPC : string;
   s : string;
code
{
   wait(SFB_CMD, (self.outside == activator) and (activator.type == UNIT_ST_PC) and (activator.level < 200));
   sPC := self.outside.name;
   heartbeat := 4 * PULSE_SEC;

:loopit:
   wait(SFB_CMD|SFB_TICK|SFB_MSG, TRUE);

   if (command(CMD_AUTO_MSG))
   {
      // log("MESSAGE " + argument);
      if (argument == "teleport")
         goto wither;
      else
         goto loopit;      
   }

   if (command(CMD_AUTO_TICK))
   {
      if (self.outside.name != sPC)
         goto wither;
      else
         goto loopit;      
   }

   if (activator.name != sPC)
      goto loopit;

   if (command("cast"))
      goto wither;
   goto loopit;

:wither:
   self.extra.descr := self.extra.descr + " There are some small brown spots on the leaves.";
   addextra(self.extra, {"$roughed"}, "");
   heartbeat := 2 * PULSE_SEC;
   pause;
   act("The shrubbery shivers ever so slightly.", A_HIDEINV, self.outside, null, null, TO_ALL);
   quit;
}
dilend

end


