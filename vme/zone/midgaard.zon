      heartbeat:=PULSE_SEC*5;
   }
   else
   {
      exec ("say You can't afford my services right now. Please come back " +
            "when you have enough money.",self);
   }

:give_back:
   act( self.name + " returns your " + thing.name + " to you.",
       A_ALWAYS,pc,null,null,TO_CHAR);
