	ln:=length(rlist);
	ln:=ln-1;
	buf:="";
	while (i<ln)
	{
		buf:=buf+itoa(i)+" - "+rlist.[i]+"<br/>";
		i:=i+1;
	}
	pagestring (textformat(buf),self);
	quit;
