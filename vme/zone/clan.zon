var
	pc:unitptr;
	i:integer;
	ln:integer;
	rlist:stringlist;
	buf:string;
	err:integer;
	pname:string;
code
{
	if (arg=="")
		goto list_rank;
	else
	{
		pname:=getword(arg);
		pc:=ghead();
		while (pc.type==UNIT_ST_PC)
		{
			if (pc.name==pname)
				break;
			pc:=pc.gnext;
		}

		if ((pc.type!=UNIT_ST_PC) or
		(not(visible(self,pc))))
