dilbegin adv_guild_lvl(ch : unitptr);
var
	pathp, guildptr : extraptr;
	guildstr, guilddescr, e : string;
	guildlvl, i : integer;
	sl, pl : stringlist;
code
{
:start:

	pathp := ("$path" in ch.quests);
	if(pathp)
	{
		pl := pathp.names;
		i := 1;
		while(i <= 3)
		{
			:loop:
			guildstr := pl.[i];
			if(guildstr == "")
				goto update;
			e := "$"+guildstr;
			guildptr := (e in ch.quests);
			if(guildptr)
			{
				guildlvl := atoi(guildptr.names.[1]);
				guilddescr := guildptr.descr;
				guildlvl := guildlvl + 1;
				
				sl := {""};
				addstring(sl,e);
				addstring(sl,itoa(guildlvl));
				addstring(sl,"$guild");
				substring(sl,"");
				
				guildptr.names := sl;
				guildptr := (e in ch.quests);
				guildlvl := atoi(guildptr.names.[1]);
				if(i == 1)
					pl.[7] := itoa(guildlvl);
				pl.[i+3] := itoa(guildlvl);
			}
			else
			{
				// Guild exists, but doesnt have extra. create it.
				guildlvl := guildlvl-39;
				if(guildlvl < 1)
					guildlvl := 1;
				sl := {""};
				addstring(sl,e);
				addstring(sl,itoa(guildlvl));
				addstring(sl,"$guild");
				substring(sl,"");
				addextra(ch.quests, sl, "");
				goto loop;
			}
			i := i+1;
		}
		:update:
		pathp := ("$path" in ch.quests);
		pathp.names := pl;
	}
	quit;
}
dilend // advance_guild_level

