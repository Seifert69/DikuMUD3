   	(splno ==SPL_RAISE_DEAD) or
   	(splno ==SPL_CAUSE_FLIGHT) or
   	(splno ==SPL_CAUSE_PANIC) or
   	(splno ==SPL_UNLOCK) or
   	(splno ==SPL_HEDGE_WALL) or
   	(splno ==SPL_POLARITY) or
   	(splno ==SPL_WIZARD_MARK) or
   	(splno ==SPL_FEAR) or
    (splno ==SPL_SOUL_SHIFT))
{
  power:=-1;
  block;
  pause;
  	}
	}
goto there;

}
